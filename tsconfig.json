{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "ES6",
        "module": "ES2022",
        "moduleResolution": "Node",

        "strict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "preserve",
        "outDir": "./build",
        "rootDir": "."
    }
}